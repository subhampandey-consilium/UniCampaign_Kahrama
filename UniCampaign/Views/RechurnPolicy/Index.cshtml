@using UniCampaignE.Web.Localization
@{
    Layout = "~/Views/Shared/_UniCampaignLayout.cshtml";
}
@section page_content{
    <div class="content-heading">
       Rechurn Policy
        <div class="pull-right">
            <div class="btn-group">
              
                <a class="btn btn-primary bg-primary-dark text-bold ml-sm" data-ajax="true" data-ajax-loading="#loader" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="showModalEditor" data-ajax-update="#modal_editor" data-ajax-failure="globalAjaxErrorHandler" href="@Url.RouteUrl(new {area="",controller="RechurnPolicy",action=nameof(UniCampaignE.Web.Controllers.RechurnPolicyController.Add) })">
                    <span>Add</span>&nbsp;&nbsp;<i class="fa fa-plus"></i>
                </a>
               
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-flat panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                       Rechurn Policy 
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive p0">
                        <table id="grid" class="table table-striped table-bordered table-condensed" data-source="@Url.Action(nameof(UniCampaignE.Web.Controllers.RechurnPolicyController.List))"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section page_scripts{\

    <script type="text/javascript">
        debugger;
       
        $(document).ready(function (e) {
            grid = $("#grid").grid({
                primaryKey: "Id",
                uiLibrary: "bootstrap",
                iconsLibrary: 'fontawesome',
                notFoundText: "@GridComman.GRID_NO_RECORD_FOUND",
                columns: [
                    { field: "Id", title: "Id" ,hidden:true},
                    { field: "Name", title: "Name"},
                    { field: "Description", title: "Description" },
                    { field: 'IsManual', title: "IsManual" },
                    { field: 'Status', title: "Status" },
                    { field: 'CreatedOn', title: "CreatedOn" },
                    {
                        field: "Edit",
                        title: "",              
                        tmpl: '<a data-ajax="true" data-ajax-loading="#loader" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="showModalEditor" data-ajax-failure="globalAjaxErrorHandler" data-ajax-update="#modal_editor" href="@Url.RouteUrl(new { area="",controller= "RechurnPolicy", action=nameof(UniCampaignE.Web.Controllers.RechurnPolicyController.Edit),id = UrlParameter.Optional})/{Id}"><span class="fa fa-edit"></span></a>',
                        tooltip: "@GridComman.GRID_EDIT",
                       
                    },
                    { title: "", minWidth: 10, priority: 3, field: "Delete", width: 34, tmpl: '<a data-ajax="true" data-ajax-loading="#loader" data-ajax-confirm="Are you sure you want to delete Rechurn Policy?" data-ajax-success="globalAjaxSuccessHandler" data-ajax-failure="globalAjaxErrorHandler" data-ajax-method="DELETE" href="@Url.RouteUrl(new { area="",controller= "RechurnPolicy", action="Delete",id = UrlParameter.Optional})/{Id}"><span class="fa fa-trash-o"></span></a>', tooltip: "@GridComman.GRID_DELETE" }
                ],
                pager: { enable: true, limit: 8, sizes: [8, 15, 25] }
            });
        });
    </script>
}
