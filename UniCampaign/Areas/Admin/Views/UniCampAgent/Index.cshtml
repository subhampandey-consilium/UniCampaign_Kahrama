
@{
    Layout = "~/Views/Shared/_UniCampaignAdminLayout.cshtml";
}
@section page_content{
    <div class="content-heading">
        Agent Management
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-flat panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        Agents
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive p0">
                        <table id="grid" class="table table-striped table-bordered table-condensed" data-source="@Url.Action(nameof(UniCampaignE.Web.Areas.Admin.Controllers.UniCampAgentController.ListAgents))"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section page_scripts{
    <script type="text/javascript">
        $(document).ready(function (e) {
            grid = $("#grid").grid({
                primaryKey: "Name",
                uiLibrary: "bootstrap",
                iconsLibrary:'fontawesome',
                notFoundText: "No records found",
                columns: [
                    { field: "AgentID", title: "AgentID" },
                    { field: "SkillTargetID", title: "SkillTargetID" },
                    { field: "EnterpriseName", title: "EnterpriseName" },
                      { field: "LoginName", title: "LoginName" },
                        { field: "TemporaryAgent", title: "TemporaryAgent" },
                        { field: "PersonID", title: "PersonID" },
                   // { field: 'Peripheral', title: 'Peripheral' },
                    {field:'IsSupervisor',title:'Supervisor'}
                ],
                pager: { enable: true, limit: 8, sizes: [8, 15, 25] }
            });
        });
    </script>
}
