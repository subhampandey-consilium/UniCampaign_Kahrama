@using UniCampaignE.Web.Localization
@{
    Layout = "~/Views/Shared/_UniCampaignLayout.cshtml";
}
@section page_content{
<div class="content-heading">
    WrapUp Template
    <div class="pull-right">
        <div class="btn-group">
            <a class="btn btn-primary bg-primary-dark text-bold" data-ajax="true" data-ajax-loading="#loader" data-ajax-failure="globalAjaxErrorHandler" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="showModalEditor" data-ajax-update="#modal_editor" href="@Url.RouteUrl(new {area="",controller="PreviewWrapUpResonCode",action="Add" })">
                <span>Add</span> &nbsp;&nbsp;<i class="fa fa-plus"></i>
            </a>
        </div>
    </div>
</div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-flat panel-primary">
                <div class="panel-heading">
                    <div class="panel-title">
                        WrapUp Templates
                    </div>
                </div>
                <div class="panel-body">
                    <div class="table-responsive p0">
                        <table id="grid" class="table table-striped table-bordered table-condensed" data-source="@Url.Action(nameof(UniCampaignE.Web.Controllers.PreviewWrapUpResonCodeController.List))"></table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section page_scripts{

    <script type="text/javascript">
        $(document).ready(function (e) {
            grid = $("#grid").grid({
                primaryKey: "WrapUpCodeId",
                uiLibrary: "bootstrap",
                iconsLibrary:'fontawesome',
                notFoundText: "@GridComman.GRID_NO_RECORD_FOUND",
                columns: [
                    { field: "WrapUpCodeName", title: "Name", priority: 1 },
                    { field: "Description", title: "Description", priority: 2 },
                    { title: "", minWidth: 10, priority: 2, field: "Edit", width: 34, tmpl: '<a data-ajax="true" data-ajax-loading="#loader" data-ajax-method="GET" data-ajax-mode="replace" data-ajax-success="showModalEditor" data-ajax-failure="globalAjaxErrorHandler" data-ajax-update="#modal_editor" href="@Url.RouteUrl(new { area="",controller= "PreviewWrapUpResonCode", action="Edit",id = UrlParameter.Optional})/{WrapUpCodeId}"><span class="fa fa-edit"></span></a>', tooltip: "@GridComman.GRID_EDIT", events: {} },
                    { title: "", minWidth: 10, priority: 3, field: "Delete", width: 34, tmpl: '<a data-ajax="true" data-ajax-loading="#loader" data-ajax-confirm="Are you sure you want to delete {Label}?" data-ajax-success="globalAjaxSuccessHandler" data-ajax-failure="globalAjaxErrorHandler" data-ajax-method="DELETE" href="@Url.RouteUrl(new { area="",controller= "PreviewWrapUpResonCode", action="Delete",id = UrlParameter.Optional})/{WrapUpCodeId}"><span class="fa fa-trash-o"></span></a>', tooltip: "@GridComman.GRID_DELETE" }
                ],
                pager: { enable: true, limit: 8, sizes: [8, 15, 25] }
            });
        });
    </script>
}
