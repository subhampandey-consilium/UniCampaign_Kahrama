        </div>
        <div class="clearfix"></div>
    </div> *@          
                <div class="form-group">
                    
                    <label class="control-label col-xs-4">@Comman.GROUP_TITLE Code <span class="text-danger">*</span></label>
                    <div class="col-xs-8 col-lg-7">
                        @Html.TextBoxFor(mod => mod.DealerCode, new { Class = "form-control", placeholder = @Comman.GROUP_TITLE + " Code" })
                    </div>
                    <div class="clearfix"></div>
                </div> 
                </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Comman.CANCEL_BUTTON_TEXT</button>
                <input type="submit" class="btn btn-primary" id="saveButton" value="@Comman.SAVE_BUTTON_TEXT" />
            </div>
        </div>
    }
</div>

