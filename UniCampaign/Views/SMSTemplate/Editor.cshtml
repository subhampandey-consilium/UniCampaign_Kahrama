@using UniCampaignE.Web.Localization
@model UniCampaignE.Core.Models.SMSTemplate
<!DOCTYPE html>
<div class="modal-dialog">
    @{
        string action = ViewBag.Action;
    }
    @using (Ajax.BeginForm(action, new { area = "", controller = "SMSTemplate" }, new AjaxOptions() { HttpMethod = "POST", LoadingElementId = "loader", OnSuccess = "globalAjaxSuccessHandler", OnFailure = "globalAjaxErrorHandler" }))
    {
        <div class="modal-content">
            <div class="modal-header bg-primary-dark">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ViewBag.ModalTitle</h4>
            </div>
            <div class="modal-body">
                <div class="form-horizantal" role="form">
                    <div class="form-group">
                       @Html.HiddenFor(smstemplate => smstemplate.SMSTemplateId)
                        <label class="control-label col-xs-4">@SMSTemplate.TEMPLATE_NAME<span class="text-danger">*</span></label>
                        <div class="col-xs-8 col-lg-7">
                            @Html.TextBoxFor(smstemplate => smstemplate.SMSTemplateName, new { @class = "form-control", placeholder = SMSTemplate.TEMPLATE_NAME })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-xs-4">@SMSTemplate.MSG_NAME<span class="text-danger">*</span></label>
                        <div class="col-xs-8 col-lg-7">
                            @Html.TextAreaFor(smstemplate => smstemplate.SMSMessage, new { @class = "form-control", placeholder = SMSTemplate.MSG_PLACE_HOLDER })
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">@Comman.CANCEL_BUTTON_TEXT</button>
                <input type="submit" class="btn btn-primary" id="saveButton" value="@Comman.SAVE_BUTTON_TEXT" />
            </div>
        </div>
          }

</div>
