
@model UniCampaignE.Core.Models.Dealer
@using UniCampaignE.Web.Localization
@using UniCampaignE.Web.HelperLib
<div class="modal-dialog">
    @{
        string action = ViewBag.Action;
    }

    @using (Ajax.BeginForm(action, new { area = "admin", controller = "Dealer" }, new AjaxOptions() { HttpMethod = "POST", LoadingElementId = "loader", OnSuccess = "globalAjaxSuccessHandler", OnFailure = "globalAjaxErrorHandler" }))
    {
        <div class="modal-content">
            <div class="modal-header bg-primary-dark">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">@ViewBag.ModalTitle</h4>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        @Html.HiddenFor(mod => mod.DealerId)
                        <label class="control-label col-xs-4">@Comman.GROUP_TITLE Name <span class="text-danger">*</span></label>
                        <div class="col-xs-8 col-lg-7">
                            @Html.TextBoxFor(mod => mod.DealerName, new { Class = "form-control", placeholder = @Comman.GROUP_TITLE + " Name" })
                        </div>
                        <div class="clearfix"></div>
                    </div> 
